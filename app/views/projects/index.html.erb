<div class="card">
  <div class="card-body">
   <h2 class='card-title d-flex justify-content-between md-4'>
     <span>Ticket</span>
     <%= link_to 'New Ticket', new_project_path, class: 'btn btn-primary'%>
  </h2>

<% @projects.each do |project| %>
  <%= link_to project, class: 'text-decoration-none' do %>
    <div class="card">
      <div class="card-body">
          <span class="badge badge-primary mb-3">in-progress</span>
       <h3 class='card-title text-dark'><%= project.name %></h3>
       <p class="text-secondary"><%= project.description%></p>
      </div>
     </div>
   <% end %>
  <% end %>
 </div>
</div>
